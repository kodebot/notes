{
    "saveAndRun": {
        "commands": [
            {
                "match": "\\.*",
                "isAsync": true,
                "cmd": "cd ${workspaceFolder} && ${workspaceFolder}/.auto/commit.sh",
            }
        ]
    },
    "files.autoSave": "off",
    "excalidraw.image": {
        "exportScale": 1,
        "exportWithBackground": true,
        "exportWithDarkMode": true
    },
    "github.copilot.enable": {
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false
    }
}